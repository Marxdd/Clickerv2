<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Qué estás contando?"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
       />
    <EditText
        android:id="@+id/et_cosa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Contador"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60sp"
        android:layout_marginHorizontal="180dp"
        android:layout_marginTop="20dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="18dp"
        >

        <Button
            android:id="@+id/b_res"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            app:icon="@drawable/ic_baseline_exposure_neg_1_24" />
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/b_sum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#4CAF50"
            app:icon="@drawable/ic_baseline_plus_one_24"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button
        android:id="@+id/b_borrar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:backgroundTint="#F44336"
        app:icon="@drawable/ic_baseline_delete_24" />


</LinearLayout>